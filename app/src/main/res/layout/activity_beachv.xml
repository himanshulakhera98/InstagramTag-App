<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#FAFAFA"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Naturev.Beachv"
    >

    <RelativeLayout
        android:id="@+id/layouta"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/texta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:drawableLeft="@drawable/ico"
            android:paddingTop="5dp"
            android:text="@string/hash"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/textb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texta"
            android:layout_marginTop="0dp"
            android:enabled="false"
            android:text="@string/v9"
            android:textColor="@color/blue"
            android:textStyle="bold" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textb"
            android:background="@color/blue"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttona"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/cp">






            </Button>

            <Button

                android:layout_marginLeft="30dp"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/arr"/>

            <Button

                android:text="Copied"
                android:textSize="40dp"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:enabled="false"
                android:clickable="false"

                />


        </TableRow>


    </RelativeLayout>







</android.support.v7.widget.CardView>